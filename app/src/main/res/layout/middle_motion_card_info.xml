<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/main_text_card"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_margin="16dp"
        android:ellipsize="start"
        android:fontFamily="@font/edo"
        android:gravity="center|start"
        android:lineSpacingExtra="4dp"
        android:maxLines="11"
        android:paddingStart="22dp"
        android:paddingEnd="22dp"
        android:paddingBottom="22dp"
        android:text="@string/text"
        android:textAppearance="?textAppearanceHeadline6"
        android:textSize="12sp"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toBottomOf="@id/main_album_card"
        app:layout_constraintEnd_toEndOf="@id/main_album_card"
        app:layout_constraintStart_toStartOf="@id/main_album_card"
        app:layout_constraintTop_toBottomOf="@id/main_title_card" />

    <TextView
        android:id="@+id/main_title_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_margin="16dp"
        android:fontFamily="@font/edo"
        android:gravity="center"
        android:text="@string/card_about"
        android:textAppearance="?textAppearanceHeadline6"
        android:textColor="@android:color/white"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="@id/main_album_card"
        app:layout_constraintTop_toTopOf="@id/main_album_card" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/main_more_details_card"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@android:color/transparent"
        android:gravity="center"
        android:text="@string/card_more_details"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="@id/main_title_card"
        app:layout_constraintEnd_toEndOf="@id/main_album_card"
        app:layout_constraintTop_toTopOf="@+id/main_title_card" />


</merge>